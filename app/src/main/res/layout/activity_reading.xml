<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SightReading.SightReadingActivity">

    <LinearLayout
        android:id="@+id/readingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.dunneev.seenatural.Activities.SightReading.StaffView
            android:id="@+id/staffView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            app:keySignature="G_MAJOR"
            app:staffHighPracticeNote="C8"
            app:staffLowPracticeNote="A0">

        </com.dunneev.seenatural.Activities.SightReading.StaffView>

        <com.dunneev.seenatural.Activities.SightReading.PianoView
            android:id="@+id/pianoView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            app:pianoHighPracticeNote="A1"
            app:pianoLowPracticeNote="A0">

        </com.dunneev.seenatural.Activities.SightReading.PianoView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>